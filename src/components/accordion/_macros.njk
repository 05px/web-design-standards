{% macro accordion(items, klass='usa-accordion') %}
<ul class="{{ klass }}">
  {% for item in items %}
  <li>
    <button class="usa-accordion-button"
      aria-expanded="{{ item.expanded }}"
      aria-controls="{{ item.id }}">
      {{ item.title }}
    </button>
    <div id="{{ item.id }}" class="usa-accordion-content">
      {{ item.content }}
    </div>
  </li>
  {% endfor %}
{% endmacro %}
