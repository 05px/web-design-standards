{% macro nav_list(links, subclass) %}
  {% for item in links %}
  <li>
    <a href="{{ item.href }}"{% if item.current %} class="usa-current"{% endif %}>
      {{ item.text }}
    </a>
    {% if item.current and item.links %}
    <ul class="{{ subclass }}">
      {{ nav_list(item.links, subclass) }}
    </ul>
    {% endif %}
  </li>
  {% endfor %}
{% endmacro %}

<section class="usa-grid">
{% for list in lists %}
  <div class="usa-width-one-fourth">
    <h6 class="usa-heading-alt">{{ list.title }}</h6>
    <ul class="usa-sidenav-list">
      {{ nav_list(list.links, 'usa-sidenav-sub_list') }}
    </ul>
  </div>
{% endfor %}
</section>
